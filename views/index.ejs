            crossorigin="anonymous"></script>

    <link rel="stylesheet" type="text/css" href="style/main.css">

</head>
<body>

<%- include navbar.ejs %>

<div class="container">
    <h1>My first blog</h1>
    <% for (var i = 0; i < posts.length; i++) { %>
    <div class="post well">
        <h2><a href="/post/<%= posts[i].id %>"><%= posts[i].title %></a></h2>
        <small class="publish_date"></small>
        <hr>
        <p><%= posts[i].content %></p>
    </div>
    <% } %>
</div>

<a href="/write">
    <div id="newPost" class="btn">+</div>
</a>
</body>

<script type="text/javascript">
    $(document).ready(function() {

    });

</script>

</html>